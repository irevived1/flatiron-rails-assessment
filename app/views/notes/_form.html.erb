<%# <%= form_for note do |f| %1> %>
<%= form_for [ note.subject, note ] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <%= f.fields_for :subject_attributes do |sub| %>
    <%= sub.label "Subject"  %>
    <%= sub.text_field :name , list: "subject_autocomplete",  value:"#{note.subject.name}"%>
    <datalist id="subject_autocomplete"  >
        <%# <%= Subject.all.each do |subject| %1> %>
        <% tmp = Subject.all %>
        <% i = Subject.all.size %>
        <% k = 0 %>
        <% while k < i %>
          <option value="<%= tmp[k].name %>">
          <%# <option value="<%= subject.name %1>"> %>
          <% k = k + 1 %>
        <% end %>
      </datalist>
  <% end %>
  <br />
  <%= f.label :content %>
  <%= f.text_area :content , size: "30x10" %>
  <br />
  <%= f.submit %>
<% end %>
