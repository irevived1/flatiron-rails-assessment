<%- model_class = Note -%>
<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.new', 'New %{model}'], :model => model_class.model_name.human.titleize %></h1>
</div>


<%= form_for @note, :html => { :class => "form-horizontal note" } do |f| %>

  <% if @note.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @note.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>


  <div class="form-group">
  <%= f.fields_for :subject_attributes do |sub| %>
    <%= sub.label "Subject" , :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= sub.text_field :name , :class => 'form-control', list: "subject_autocomplete",  value:"#{@note.subject.name}" %>
    <datalist id="subject_autocomplete"  >
        <% tmp = Subject.all %>
        <% i = Subject.all.size %>
        <% k = 0 %>
        <% while k < i %>
          <option value="<%= tmp[k].name %>">
          <% k = k + 1 %>
        <% end %>
      </datalist>
  <% end %>
  </div>
  </div>

  <div class="form-group">
    <%= f.label :content, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :content, size: "30x10" , :class => 'form-control' %>
    </div>
    <%=f.error_span(:content) %>
  </div>
  <div class="form-group">

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                home_index_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
