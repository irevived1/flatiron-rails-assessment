<h1>New Note:</h1>
<%= form_for @note do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <%= f.fields_for @note.subject do |sub| %>
    <%= sub.label "Subject"  %>
    <%= sub.text_field :name , list: "subject_autocomplete" %>
      <datalist id="subject_autocomplete">
        <%= Subject.all.each do |subject| %>
          <option value="<%= subject.name %>">
        <% end %>
      </datalist>
  <% end %>
  <br />
  <%= f.label :content %>
  <%= f.text_area :content , size: "30x10" %>
  <br />
  <%= f.submit %>
<% end %>
